{
    "name": "Category",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Category name"
      },
      "slug": {
        "type": "string",
        "description": "URL-friendly category identifier"
      },
      "description": {
        "type": "string",
        "description": "Category description"
      },
      "icon": {
        "type": "string",
        "description": "Lucide icon name for the category"
      },
      "color": {
        "type": "string",
        "description": "Color hex code for the category"
      },
      "active": {
        "type": "boolean",
        "default": true,
        "description": "Whether category is active"
      },
      "sort_order": {
        "type": "number",
        "default": 0,
        "description": "Sort order for display"
      }
    },
    "required": [
      "name",
      "slug"
    ]
  }
